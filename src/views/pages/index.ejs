<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head'); %>
  </head>
  <%- include('../partials/nav'); %>
  <body>
    <div class="px-4 py-5 my-5 text-center">
      <img class="d-block mx-auto mb-4" src="/images/logo.png" alt="logo" />
      <h1 class="display-5 fw-bold">Used Goods Store</h1>
      <div class="col-lg-6 mx-auto">
        <p class="mb-4 fs-1">Affordable price and High quality</p>
        <div class="d-grid d-sm-flex justify-content-sm-center">
          <a href="#scroll" class="btn btn-primary btn-lg px-4 gap-3"
            >See Products</a
          >
        </div>
      </div>
    </div>
    <br /><br />
    <!-- Content section 1-->
    <section>
      <div class="container px-5">
        <div class="row gx-5 align-items-center">
          <div class="col-lg-6 order-lg-2">
            <div class="p-5">
              <img
                class="img-fluid rounded-circle"
                src="https://ar.hkbu.edu.hk/f/upload/2965/400p319/39596278_xl.jpg"
                alt="..."
              />
            </div>
          </div>
          <div class="col-lg-6 order-lg-1">
            <div class="p-5">
              <h2 class="display-4">Select Products</h2>
              <p>We only sell select high-quality items.</p>
            </div>
          </div>
        </div>
      </div>
    </section>
    <br /><br />
    <!-- Content section 2-->
    <section class="gry">
      <div class="container px-5">
        <div class="row gx-5 align-items-center">
          <div class="col-lg-6">
            <div class="p-5">
              <img
                class="img-fluid rounded-circle"
                src="https://static.vecteezy.com/system/resources/previews/002/342/852/original/reasonable-price-concept-icon-vector.jpg"
                alt="..."
              />
            </div>
          </div>
          <div class="col-lg-6">
            <div class="p-5">
              <h2 class="display-4">Reasonable Price</h2>
              <p>We offer a affordable price.</p>
            </div>
          </div>
        </div>
      </div>
    </section>
    <!-- Content section 3-->
    <section>
      <div class="container px-5">
        <div class="row gx-5 align-items-center">
          <div class="col-lg-6 order-lg-2">
            <div class="p-5">
              <img
                class="img-fluid rounded-circle"
                src="https://www.dreamhost.com/blog/wp-content/uploads/2019/06/afa314e6-1ae4-46c5-949e-c0a77f042e4f_DreamHost-howto-prod-descrips-full-750x500.jpeg"
                alt="..."
              />
            </div>
          </div>
          <div class="col-lg-6 order-lg-1">
            <div class="p-5">
              <h2 class="display-4">E-Commerce</h2>
              <p>Buy the products what you want with just a few clicks.</p>
            </div>
          </div>
        </div>
      </div>
    </section>
    <div class="" id="scroll">
      <div class="">
        <div class="text-center text-black">
          <h1 class="display-4 fw-bolder">Hot Products</h1>
          <!--<p class="lead fw-normal text-white-50 mb-0"></p>-->
        </div>
      </div>
    </div>
    <!-- Section-->
    <section class="py-5">
      <div class="container px-4 px-lg-5 mt-5">
        <div
          class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center"
        >
          <% ads.forEach(ad => { %>
          <div class="col mb-5">
            <div class="card h-100">
              <!-- Product image-->
              <img
                class="card-img-top"
                src="https://dummyimage.com/450x300/dee2e6/6c757d.jpg"
                alt="..."
              />
              <!-- Product details-->
              <div class="card-body p-4">
                <div class="text-center">
                  <!-- Product name-->
                  <p class="fe-5 fw-bolder"><%= ad.title %></p>
                  <!-- Product price-->
                  <p class="fe-6 text-success">$<%= ad.price %></p>
                </div>
              </div>
              <!-- Product actions-->
              <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                <!--go to details-->
                <div class="text-center">
                  <a
                    class="btn btn-outline-dark mt-auto"
                    href="/ads/<%= ad.adsId %>"
                    >View</a
                  >
                </div>
              </div>
            </div>
          </div>
          <% }) %>
        </div>
        <div class="d-flex justify-content-center">
          <% if (user != undefined) { %>
          <a class="btn btn-primary btn-xl rounded-pill mt-5" href="/ads/post"
            >Post a Product</a
          >
          <% } %>
        </div>
      </div>
    </section>
  </body>
</html>
