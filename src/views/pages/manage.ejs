<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head'); %>
  </head>
  <header><%- include('../partials/nav'); %></header>
  <body>
    <% if (ads.length === 0) { %>
    <div class="text-center">
      <p class="">You dont have any acive advertisement right now</p>
      <p class="">Create One?</p>
    </div>

    <% } %>
    <div class="d-flex justify-content-center">
      <a class="btn btn-primary btn-lg rounded-pill m-5" href="/ads/post"
        >Post a Product</a
      >
    </div>
    <% ads.forEach(ad => { %>
    <div class="row justify-content-center mb-3">
      <div class="col-md-12 col-xl-10">
        <div class="card shadow-0 border rounded-3">
          <div class="card-body">
            <div class="row">
              <div class="col-md-12 col-lg-3 col-xl-3 mb-4 mb-lg-0">
                <div class="bg-image hover-zoom ripple rounded ripple-surface">
                  <img
                    src="https://mdbcdn.b-cdn.net/img/Photos/Horizontal/E-commerce/Products/img%20(4).webp"
                    class="w-100"
                  />
                  <a href="#!">
                    <div class="hover-overlay">
                      <div
                        class="mask"
                        style="background-color: rgba(253, 253, 253, 0.15)"
                      ></div>
                    </div>
                  </a>
                </div>
              </div>
              <div class="col-md-6 col-lg-6 col-xl-6">
                <h5><%= ad.title %></h5>
                <p class="text-truncate mb-4 mb-md-0"><%= ad.body %></p>
              </div>
              <div
                class="col-md-6 col-lg-3 col-xl-3 border-sm-start-none border-start"
              >
                <div class="d-flex flex-row align-items-center mb-1">
                  <h4 class="mb-1 me-1">$<%= ad.price %></h4>
                </div>
                <h6 class="text-success">
                  Delivery Method: <%= ad.deliveryMethod %>
                </h6>
                <div class="d-flex flex-column mt-4">
                  <a class="btn btn-outline-primary btn-sm mt-2" href="/ads/<%= ad.adsId %>">
                    Details
                  </a>
                  <a class="btn btn-primary btn-sm mt-2" href="edit/<%= ad.adsId %>">
                    Edit
                  </a>
                  <a
                    class="btn btn-outline-danger btn-sm mt-2"
                    href="delete/<%= ad.adsId %>"
                  >
                    Delete
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% }) %>
  </body>
</html>
