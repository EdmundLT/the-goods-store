<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head'); %>
  </head>
  <header>
    <%- include('../partials/nav'); %> <link rel="stylesheet"
    href="/stylesheets/style.css"
  </header>

  <body>
    <div class="container mt-5 mb-5">
      <div class="row d-flex justify-content-center">
        <div class="col-md-10">
          <div class="card">
            <div class="row">
              <div class="col-md-6">
                <div class="images p-3">
                  <div class="text-center p-4">
                    <img
                      id="main-image"
                      src="https://mdbcdn.b-cdn.net/img/Photos/Horizontal/E-commerce/Products/img%20(4).webp"
                      width="250"
                    />
                  </div>
                </div>
              </div>
              <div class="col-md-6">
                <div class="product p-4">
                  <div
                    class="d-flex justify-content-between align-items-center"
                  >
                    <div class="d-flex align-items-center">
                      <a href="/ads">
                        <i class="fa fa-long-arrow-left"></i>
                        <span class="ml-1">Back</span>
                      </a>
                    </div>
                  </div>
                  <div class="mt-4 mb-3">
                    <h5 class="text-uppercase"><%= ad.title %></h5>
                    <div class="price d-flex flex-row align-items-center">
                      <span class="text-success fs-5">$<%= ad.price %></span>
                    </div>
                    <p class="fs-4">Delivery Method: <span class="text-primary"><%= ad.deliveryMethod %></span></p>
                  </div>
                  <p class="fs-4"><%= ad.body %></p>
                  <p></p>
                  <div class="d-flex gap-4">
                    <% if (user != undefined && ad.username === user.username) {
                    %>
                    <!-- Edit Button -->
                    <div>
                      <a
                        href="/edit"
                        class="btn btn-primary btn-xl rounded-pill"
                      >
                        Edit
                      </a>
                    </div>
                    <!-- Delete Button -->
                    <div>
                      <a
                        href="/delete"
                        class="btn btn-danger btn-xl rounded-pill"
                      >
                        Delete
                      </a>
                    </div>
                    <% } %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
